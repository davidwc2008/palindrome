Palindrome Program in C++
*/

//include libraries
//can use cstring libraries
#include <iostream>
#include <cstring>

using namespace std;

//main function
int main()
{
  //declare local variables
  char str[80] = {' '};
  char str2[80] = {' '};
  char str3[80] = {' '};
  int count = 0;
    
  cin.get(str, 80);
  cout << str << endl;

  for (int i = 0; i < 80; i++){
    if (isalpha(str[i])){
      str2[count]=str[i];
      count++;
    }else if(str[i] == '\0'){
      str2[count] = '\0';
      break;
  }
  }

  cout << str2 << endl;
  cout << str2[0] << endl;
  cout << count << endl;

  count--;

  for (int i = 0; i < 80; i++){
    if (count >= 0){
     str3[i] = str2[count];
     count--;
    }else if (count < 0){
      str3[i]='\0';
      break;
    }
  }

  cout << str3 << endl;

  if (strcmp(str2,str3) == 0) {
    cout << "It is a palindrome." << endl;
  }else{
    cout << "Not a palindrome." << endl;
  }
  
  return 0;
}
